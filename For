import random

class FishingModule:
    def __init__(self, player):
        self.player = player  # The player object with inventory
        self.fish_types = {
            "Carp": 5,
            "Bass": 8,
            "Salmon": 12,
            "Trout": 7,
            "Cod": 6
        }

    def fish(self):
        """Simulate fishing"""
        caught_fish = random.choice(list(self.fish_types.keys()))
        self.player.add_fish(caught_fish)
        print(f"\nðŸŽ£ You caught a {caught_fish}! It has been added to your inventory.")
